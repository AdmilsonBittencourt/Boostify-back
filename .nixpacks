build:
  # Especifica a versão do Maven e JDK que você quer usar para a build
  builder:
    image: "ghcr.io/railwayapp/nixpacks:ubuntu-1725321821" # Imagem base para construção
  commands:
    - "chmod +x ./mvnw" # Dá permissão de execução para o Maven Wrapper
    - "./mvnw clean install -DskipTests" # Comando de build do Maven (sem rodar os testes)
start:
  # Comando que o Railway irá rodar para iniciar sua aplicação
  command: "java -Dserver.port=$PORT -jar target/*.jar" # Comando para rodar o JAR do Spring Boot
